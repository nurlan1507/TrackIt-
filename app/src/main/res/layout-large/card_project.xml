<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_project"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/middle_gray"
    app:strokeWidth="0.5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_project_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/card_project_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/board_lake_background"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Background" />
        <TextView
            android:id="@+id/project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/card_project_image"
            tools:text="ASDASDASDASD"
            android:textSize="19sp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="#80000000"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>
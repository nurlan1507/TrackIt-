<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_sm_small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_sm_normal" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_sm_large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text_sm_xlarge" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textSize">27sp</item>
    </style>




    <style name="text_xl_small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="text_xl_normal" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="text_xl_large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="text_xl_xlarge" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:textSize">80sp</item>
        <item name="android:fontWeight">700</item>
    </style>



    <style name="text_link_small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolightitalic</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="text_link_normal" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolightitalic</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="text_link_large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolightitalic</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="text_link_xlarge" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotolightitalic</item>
        <item name="android:textSize">30sp</item>
    </style>




    <style name="button_small" parent="Widget.AppCompat.Button">
        <item name="android:textSize">4sp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="button_normal" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="button_large" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="button_xlarge" parent="Widget.AppCompat.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>




    <!--- Toolbar !-->
    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>



    <style name="Toolbar_normal">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
    </style>




    <style name="text_header_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>
    <style name="text_header_normal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>
    <style name="text_header_large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>
    <style name="text_header_xlarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>
</resources>